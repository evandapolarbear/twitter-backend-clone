<h2>New Tweet!</h2>
<form action="/tweets" class="tweet-compose" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
    <h1 class="counter">140</h1>
  </label>
  <br>

  <label>
    Mention
    <div class="presubmit-mentions">

    </div>
    <div id="hidden">
      <select class="original-select" name="tweet[mentioned_user_ids][]">
        <option></option>
        <% User.all.each do |user| %>
        <option value="<%= user.id %>"><%= user.username %></option>
        <% end %>
      </select>
    </div>
    <a id="add-mention" href="#">Add Mention</a>
  </label>
  <br>

  <input type="Submit" value="Post Tweet!">
</form>
